# Copy to backend/.env and fill values

APP_ENV=dev
APP_HOST=0.0.0.0
APP_PORT=8000

DATABASE_URL=postgresql+psycopg://app:app@localhost:5432/app
REDIS_URL=redis://localhost:6379/0

# Model provider selection:
# - none
# - openai-compatible
MODEL_PROVIDER=openai-compatible

# For openai-compatible provider
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_API_KEY=your_key_here
OPENAI_MODEL=gpt-4o-mini

DEFAULT_LANGUAGE=ru
ARTIFACTS_DIR=./var/artifacts

# Google Calendar sync (optional)
# Recommended: service account JSON file path.
GOOGLE_SERVICE_ACCOUNT_FILE=
# Target calendar where events are created
GOOGLE_CALENDAR_ID=

# Google OAuth (user) integration for Drive/Docs export (optional)
# 1) Create OAuth Client in Google Cloud Console
# 2) Add redirect URI: http://localhost:8000/google/callback (adjust if needed)
# 3) Set FRONTEND_BASE_URL to your UI origin (used to prevent open-redirects)
GOOGLE_OAUTH_CLIENT_ID=
GOOGLE_OAUTH_CLIENT_SECRET=
GOOGLE_OAUTH_REDIRECT_URL=http://localhost:8000/google/callback
FRONTEND_BASE_URL=http://localhost:5173
# Any long random string; used to sign OAuth state
AUTH_STATE_SECRET=

# Local auth (email/password + seed phrase) (optional)
# Any long random strings.
AUTH_JWT_SECRET=
AUTH_SEED_SECRET=
